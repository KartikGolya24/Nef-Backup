@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem<TextWithIcon>>;
@{
    var content = Model?.Content;
}

<li>
    @if (content?.HasBackground == true)
    {
        <div class="icon-box">
            <img src="@content?.Icon?.MediaUrl()" class="img-fluid" alt="" />
        </div>
    }
    else
    {
        <img src="@content?.Icon?.MediaUrl()" class="img-fluid" alt="" />
    }
    <p class="@(content?.IsItalic == true ? "italic" : "")">@content?.Text</p>
</li>