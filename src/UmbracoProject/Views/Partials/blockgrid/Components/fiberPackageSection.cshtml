@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockGridItem<FiberPackageSection>>
@{
    var content = Model?.Content;
    var setting = Model?.Settings as SectionSettingModel;
}

@if (content != null)
{
    <!-------------------------------------- pacakge --------------------->
    <div class="pacakge-section @setting?.Theme">

        <div class="container-xl">
            @if (!string.IsNullOrWhiteSpace(content.Heading) || !string.IsNullOrWhiteSpace(content.Description?.ToString()))
            {
                <div class="section-heading">
                    @if (!string.IsNullOrWhiteSpace(content.Heading))
                    {
                        <h2>@content.Heading</h2>
                    }

                    @if (!string.IsNullOrWhiteSpace(content.Description?.ToString()))
                    {
                        @Html.Raw(content.Description)
                    }
                </div>
            }
            <div class="package-list">
                <div class="row">
                    @await Html.PartialAsync("~/Views/Partials/_FiberPackages.cshtml")
                </div>
            </div>
        </div>

    </div>

    <!-------------------------------------------Modal ------------------------------->
    <div class="modal fade"
         id="searchInternetPackages"
         data-bs-keyboard="false"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header flex-column align-items-start pb-0 pt-64">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body pb-64">
                    <div class="search-section py-0">
                        <div class="container">
                            <h2 class="title black-950 mb-40 text-center fw-600">Kan jeg få nef Fiber?</h2>
                            <div class="form-group mb-32">
                                <input type="text" class="form-control" placeholder="Søg" aria-label="Søg" />
                                <button type="button" class="btn dark_blue_btn">Søg</button>
                                <ul class="searched-list border_black-200 mt-32">
                                    <li><a class="black-950" href="order-internet03.html">Jensensvej 44, 5300 Kerteminde</a></li>
                                    <li><a class="black-950" href="order-internet03.html">Jensensvej 44, 5300 Kerteminde</a></li>
                                    <li><a class="black-950" href="order-internet03.html">Jensensvej 44, 5300 Kerteminde</a></li>
                                    <li><a class="black-950" href="order-internet03.html">Jensensvej 44, 5300 Kerteminde</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}