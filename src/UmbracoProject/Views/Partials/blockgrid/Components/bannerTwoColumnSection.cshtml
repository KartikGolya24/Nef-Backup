@using Umbraco.Cms.Core.Models.Blocks
@using UmbracoProject.App_Code.Helpers
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockGridItem<BannerTwoColumnSection>>

@{
    var content = Model?.Content;
    var settings = Model?.Settings as SectionSettingModel;
}

@if (content?.Blocks?.Count > 0)
{
    <div class="alt-contact-section buy-charging-banner @settings?.Theme">
        <div class="container">
            <div class="row align-items-center">
                @foreach (var item in content?.Blocks)
                {
                    var alias = item?.Content?.ContentType?.Alias;
                    @if (alias == BannerContentSection.ModelTypeAlias)
                    {
                        var contentModel = item?.Content as BannerContentSection;
                        <div class="col-lg-6">
                            <div class="page-title">
                                <div class="contact-section">
                                    <h1>@contentModel?.Heading</h1>
                                    <div class="contact-section-para">
                                        @Html.Raw(contentModel?.Description)
                                    </div>
                                    @if (contentModel?.ButtonList?.Count > 0)
                                    {
                                        <div class="multiple-buttons">
                                            @Html.GetBlockListHtml(contentModel?.ButtonList)
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    @if (alias == BannerImageSection.ModelTypeAlias)
                    {
                        var imageModel = item?.Content as BannerImageSection;
                        <div class="col-lg-6">
                            <div class="section-img">
                                <img src="@imageModel?.Image.GetWebp()" class="img-fluid" alt="img">
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

}
